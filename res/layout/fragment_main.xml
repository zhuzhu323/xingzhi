<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText" >

    <com.zjf.kaw.view.NoScrollViewPager
        android:id="@+id/vp_pagers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_menu_bottom" />

    <TextView
        android:id="@+id/tv_menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_above="@+id/rg_tab_menu"
        android:background="#000000" />

    <RadioGroup
        android:id="@+id/rg_tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shouye_bar_bottom"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_tab_menu_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
             android:drawablePadding="3dp"
            android:paddingBottom="6dp"
            android:paddingTop="8dp"
            android:drawableTop="@drawable/tab_shouye_checked_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/tab_menu_text_color_selector"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_tab_menu_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:paddingBottom="6dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:drawableTop="@drawable/tab_video_checked_selector"
            android:text="视频"
            android:textColor="@drawable/tab_menu_text_color_selector"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_tab_menu_care"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_shoucang_checked_selector"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="8dp"
            android:text="关心"
            android:textColor="@drawable/tab_menu_text_color_selector"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_tab_menu_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_mine_checked_selector"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="8dp"
            android:text="我的"
            android:textColor="@drawable/tab_menu_text_color_selector"
            android:textSize="14sp" />
    </RadioGroup>

</RelativeLayout>